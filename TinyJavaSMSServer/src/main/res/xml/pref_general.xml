<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="example_checkbox"
        android:title="@string/pref_title_automatic_response"
        android:summary="@string/pref_description_automatic_response"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="@string/pref_default_key"
        android:title="@string/pref_title_key"
        android:defaultValue="@string/pref_default_key"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
            android:key="@string/pref_default_value"
            android:title="@string/pref_title_value"
            android:defaultValue="@string/pref_default_value"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

</PreferenceScreen>
